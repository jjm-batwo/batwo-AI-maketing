// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // URL 설정은 prisma.config.ts에서 관리 (Prisma 7.x)
  // - url: Connection Pooler (일반 쿼리)
  // - directUrl: Direct Connection (마이그레이션용)
}

// ========================================
// Global Roles (Admin System)
// ========================================

enum GlobalRole {
  USER
  ADMIN
  SUPER_ADMIN
}

// ========================================
// User & Authentication
// ========================================

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  emailVerified DateTime?
  image         String?
  globalRole    GlobalRole     @default(USER)
  accounts      Account[]
  sessions      Session[]
  campaigns     Campaign[]
  reports       Report[]
  usageLogs     UsageLog[]
  metaAccount   MetaAdAccount?
  metaPixels    MetaPixel[]
  subscription  Subscription?
  billingKeys   BillingKey[]
  paymentLogs   PaymentLog[]
  aiFeedback    AIFeedback[]
  conversations Conversation[]
  alerts        Alert[]
  creatives     Creative[]
  creativeAssets        CreativeAsset[]
  competitorTrackings   CompetitorTracking[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([globalRole])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ========================================
// Meta Ads Integration
// ========================================

model MetaAdAccount {
  id            String    @id @default(cuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  metaAccountId String
  accessToken   String    @db.Text
  tokenExpiry   DateTime?
  businessName  String?
  currency      String    @default("KRW")
  timezone      String    @default("Asia/Seoul")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// ========================================
// Campaign Management
// ========================================

enum CampaignObjective {
  AWARENESS
  TRAFFIC
  ENGAGEMENT
  LEADS
  APP_PROMOTION
  SALES
  CONVERSIONS
}

enum CampaignStatus {
  DRAFT
  PENDING_REVIEW
  ACTIVE
  PAUSED
  COMPLETED
  REJECTED
}

model Campaign {
  id              String            @id @default(cuid())
  userId          String
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  metaCampaignId  String?
  name            String
  objective       CampaignObjective
  status          CampaignStatus    @default(DRAFT)
  dailyBudget     Decimal           @db.Decimal(15, 2)
  currency        String            @default("KRW")
  startDate       DateTime
  endDate         DateTime?
  targetAudience  Json?
  buyingType      String            @default("AUCTION")
  advantageConfig  Json?
  kpiSnapshots    KPISnapshot[]
  budgetAlert     BudgetAlert?
  adSets          AdSet[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([userId])
  @@index([status])
  @@index([startDate])
}

// ========================================
// Budget Alerts
// ========================================

model BudgetAlert {
  id               String    @id @default(cuid())
  campaignId       String
  campaign         Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  thresholdPercent Int       @default(80) // 예산 소진 임계값 (%)
  alertedAt        DateTime? // 알림 발송 시점
  isEnabled        Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@unique([campaignId]) // 캠페인당 하나의 알림 설정
  @@index([isEnabled])
}

// ========================================
// A/B Testing
// ========================================

enum ABTestStatus {
  DRAFT
  RUNNING
  PAUSED
  COMPLETED
}

model ABTest {
  id                String          @id @default(cuid())
  campaignId        String
  name              String
  description       String?
  status            ABTestStatus    @default(DRAFT)
  variants          ABTestVariant[]
  startDate         DateTime
  endDate           DateTime?
  confidenceLevel   Int             @default(95) // 신뢰수준 (%)
  minimumSampleSize Int             @default(1000)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([campaignId])
  @@index([status])
}

model ABTestVariant {
  id             String   @id @default(cuid())
  abTestId       String
  abTest         ABTest   @relation(fields: [abTestId], references: [id], onDelete: Cascade)
  name           String
  description    String?
  trafficPercent Int      @default(50) // 트래픽 비율 (%)
  impressions    Int      @default(0)
  clicks         Int      @default(0)
  conversions    Int      @default(0)
  spend          Decimal  @default(0) @db.Decimal(15, 2)
  currency       String   @default("KRW")
  revenue        Decimal  @default(0) @db.Decimal(15, 2)
  isControl      Boolean  @default(false) // 컨트롤 그룹 여부
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([abTestId])
}

// ========================================
// KPI Tracking
// ========================================

model KPISnapshot {
  id          String   @id @default(cuid())
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  impressions Int      @default(0)
  clicks      Int      @default(0)
  linkClicks  Int      @default(0)
  conversions Int      @default(0)
  spend       Decimal  @db.Decimal(15, 2)
  currency    String   @default("KRW")
  revenue     Decimal  @db.Decimal(15, 2)
  date        DateTime @db.Date
  createdAt   DateTime @default(now())

  @@unique([campaignId, date])
  @@index([campaignId])
  @@index([date])
}

// ========================================
// Report Management
// ========================================

enum ReportType {
  DAILY
  WEEKLY
  MONTHLY
}

enum ReportStatus {
  DRAFT
  GENERATED
  SENT
}

model Report {
  id          String       @id @default(cuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        ReportType   @default(WEEKLY)
  campaignIds String[]
  startDate   DateTime
  endDate     DateTime
  sections    Json         @default("[]")
  aiInsights  Json         @default("[]")
  status      ReportStatus @default(DRAFT)
  generatedAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([createdAt])
}

// ========================================
// Usage Quota Tracking (MVP)
// ========================================

model UsageLog {
  id        Int      @id @default(autoincrement())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String // 'CAMPAIGN_CREATE', 'AI_COPY_GEN', 'AI_ANALYSIS'
  createdAt DateTime @default(now())

  @@index([userId, type, createdAt])
  @@index([createdAt])
}

// ========================================
// Team Collaboration
// ========================================

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model Team {
  id          String       @id @default(cuid())
  name        String
  description String?
  ownerId     String
  maxMembers  Int          @default(10)
  members     TeamMember[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([ownerId])
}

model TeamMember {
  id          String    @id @default(cuid())
  teamId      String
  team        Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId      String
  email       String
  name        String?
  role        TeamRole  @default(MEMBER)
  permissions String[]  @default([])
  invitedBy   String?
  invitedAt   DateTime  @default(now())
  joinedAt    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([teamId, userId])
  @@unique([teamId, email])
  @@index([teamId])
  @@index([userId])
  @@index([email])
}

// ========================================
// Meta API Call Logging (App Review 대응)
// ========================================

model MetaApiLog {
  id         String   @id @default(cuid())
  endpoint   String // e.g., "campaigns", "insights", "adaccount"
  method     String // GET, POST, DELETE
  statusCode Int // HTTP status code
  success    Boolean // API 호출 성공 여부
  errorCode  String? // Meta API 에러 코드 (실패 시)
  errorMsg   String? // 에러 메시지 (실패 시)
  latencyMs  Int // 응답 시간 (ms)
  accountId  String? // Meta 광고 계정 ID (batowcompany)
  createdAt  DateTime @default(now())

  @@index([createdAt])
  @@index([success])
  @@index([accountId])
  @@index([createdAt, success]) // 15일 통계 조회용 복합 인덱스
}

// ========================================
// Meta Pixel One-Click Setup
// ========================================

enum PixelSetupMethod {
  MANUAL // 수동 스크립트 복사
  PLATFORM_API // 카페24 API로 자동 설치
}

enum EcommercePlatform {
  CAFE24
  CUSTOM
  NAVER_SMARTSTORE
}

enum IntegrationStatus {
  PENDING
  CONNECTED
  SCRIPT_INJECTED
  ACTIVE
  ERROR
  DISCONNECTED
}

model MetaPixel {
  id          String           @id @default(cuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  metaPixelId String // Meta 픽셀 ID (예: "123456789012345")
  name        String
  isActive    Boolean          @default(true)
  setupMethod PixelSetupMethod @default(MANUAL)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  platformIntegration PlatformIntegration?
  conversionEvents    ConversionEvent[]

  @@unique([userId, metaPixelId])
  @@index([userId])
}

model PlatformIntegration {
  id              String            @id @default(cuid())
  pixelId         String            @unique
  pixel           MetaPixel         @relation(fields: [pixelId], references: [id], onDelete: Cascade)
  platform        EcommercePlatform
  platformStoreId String // 카페24 몰 ID
  accessToken     String            @db.Text
  refreshToken    String?           @db.Text
  tokenExpiry     DateTime?
  scriptTagId     String? // 설치된 스크립트 태그 ID
  webhookId       String? // 주문 웹훅 ID
  status          IntegrationStatus @default(PENDING)
  lastSyncAt      DateTime?
  errorMessage    String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([platform])
  @@index([status])
}

model ConversionEvent {
  id             String    @id @default(cuid())
  pixelId        String
  pixel          MetaPixel @relation(fields: [pixelId], references: [id], onDelete: Cascade)
  eventName      String // PageView, Purchase, AddToCart 등
  eventId        String // 중복 제거용 고유 ID
  eventTime      DateTime
  eventSourceUrl String?
  userData       Json? // 해시된 사용자 정보
  customData     Json? // 주문 금액, 상품 ID 등
  sentToMeta     Boolean   @default(false)
  metaResponseId String?
  createdAt      DateTime  @default(now())

  @@unique([pixelId, eventId])
  @@index([pixelId, sentToMeta])
  @@index([eventTime])
}

// ========================================
// Subscription & Payment (Admin System)
// ========================================

enum SubscriptionPlan {
  FREE
  STARTER
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELLED
  EXPIRED
}

enum InvoiceStatus {
  PENDING
  PAID
  FAILED
  REFUND_REQUESTED
  REFUNDED
  PARTIALLY_REFUNDED
}

model BillingKey {
  id              String   @id @default(cuid())
  userId          String
  billingKey      String // AES-256-GCM encrypted
  cardCompany     String?
  cardNumber      String? // masked card number
  method          String   @default("CARD")
  isActive        Boolean  @default(true)
  authenticatedAt DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscriptions Subscription[]

  @@index([userId])
  @@map("billing_keys")
}

model Subscription {
  id                 String             @id @default(cuid())
  userId             String             @unique
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan               SubscriptionPlan   @default(FREE)
  status             SubscriptionStatus @default(ACTIVE)
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelledAt        DateTime?
  invoices           Invoice[]
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  billingPeriod      String? // MONTHLY | ANNUAL
  billingKeyId       String?
  nextBillingDate    DateTime?
  tossCustomerKey    String?

  billingKey  BillingKey?  @relation(fields: [billingKeyId], references: [id])
  paymentLogs PaymentLog[]

  @@index([status])
  @@index([plan])
  @@index([currentPeriodEnd])
}

model Invoice {
  id             String        @id @default(cuid())
  subscriptionId String
  subscription   Subscription  @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  amount         Int // 금액 (원 단위)
  currency       String        @default("KRW")
  status         InvoiceStatus @default(PENDING)
  paymentMethod  String? // card, bank_transfer 등
  paidAt         DateTime?
  refundedAt     DateTime?
  refundAmount   Int? // 환불 금액
  refundReason   String? // 환불 사유
  receiptUrl     String? // 영수증 URL
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  paymentKey     String? // Toss paymentKey
  tossOrderId    String? // Toss order ID

  paymentLogs PaymentLog[]

  @@index([subscriptionId])
  @@index([status])
  @@index([createdAt])
}

model PaymentLog {
  id             String   @id @default(cuid())
  userId         String
  subscriptionId String?
  invoiceId      String?
  paymentKey     String?  @unique // Toss paymentKey
  orderId        String   @unique // order ID
  amount         Int
  status         String // READY, IN_PROGRESS, DONE, CANCELED, FAILED
  method         String? // CARD, BILLING
  failReason     String?
  receiptUrl     String?
  rawResponse    Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  subscription Subscription? @relation(fields: [subscriptionId], references: [id])
  invoice      Invoice?      @relation(fields: [invoiceId], references: [id])

  @@index([userId])
  @@index([subscriptionId])
  @@map("payment_logs")
}

// ========================================
// OAuth Temporary Session (Meta Account Selection)
// ========================================

model OAuthSession {
  id          String   @id // sessionId
  userId      String
  accessToken String   @db.Text
  tokenExpiry Int // seconds
  accounts    Json // Array of ad accounts
  expiresAt   DateTime // TTL
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

// ========================================
// Conversational AI Agent
// ========================================

enum PendingActionStatus {
  PENDING
  CONFIRMED
  EXECUTING
  COMPLETED
  FAILED
  CANCELLED
  EXPIRED
}

enum AlertSeverity {
  INFO
  WARNING
  CRITICAL
}

enum AlertStatus {
  UNREAD
  READ
  DISMISSED
  ACTED_ON
}

model Conversation {
  id             String                @id @default(cuid())
  userId         String
  user           User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  title          String?
  messages       ConversationMessage[]
  pendingActions PendingAction[]
  isArchived     Boolean               @default(false)
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt

  @@index([userId, updatedAt])
  @@index([userId, isArchived])
}

model ConversationMessage {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String
  content        String?      @db.Text
  toolCalls      Json?
  toolName       String?
  toolResult     Json?
  metadata       Json?
  createdAt      DateTime     @default(now())

  @@index([conversationId, createdAt])
}

model PendingAction {
  id             String              @id @default(cuid())
  conversationId String
  conversation   Conversation        @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  messageId      String?
  toolName       String
  toolArgs       Json
  displaySummary String              @db.Text
  details        Json?
  warnings       Json?
  status         PendingActionStatus @default(PENDING)
  result         Json?
  errorMessage   String?
  expiresAt      DateTime
  confirmedAt    DateTime?
  executedAt     DateTime?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt

  @@index([conversationId, status])
  @@index([status, expiresAt])
}

model Alert {
  id           String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  type         String
  severity     AlertSeverity
  status       AlertStatus   @default(UNREAD)
  title        String
  message      String        @db.Text
  data         Json?
  campaignId   String?
  pushedToChat Boolean       @default(false)
  createdAt    DateTime      @default(now())
  readAt       DateTime?
  expiresAt    DateTime?

  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([severity, status])
}

// ========================================
// AI Feedback Tracking
// ========================================

model AIFeedback {
  id         String @id @default(cuid())
  responseId String // AI response identifier
  userId     String
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Feedback data
  rating    Int // 1-5 stars
  isHelpful Boolean?
  comment   String?  @db.Text

  // Context
  feature String // e.g., 'copy_generation', 'analysis', 'chat'
  context Json? // Additional context data

  // Response metadata
  responseType String // 'streaming' | 'standard'
  modelUsed    String?

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([feature])
  @@index([createdAt])
}

// ========================================
// Ad Management (Campaign → AdSet → Ad → Creative)
// ========================================

enum AdSetStatus {
  DRAFT
  ACTIVE
  PAUSED
  DELETED
  ARCHIVED
}

enum AdStatus {
  DRAFT
  ACTIVE
  PAUSED
  DELETED
}

enum CreativeFormat {
  SINGLE_IMAGE
  SINGLE_VIDEO
  CAROUSEL
}

enum BillingEvent {
  IMPRESSIONS
  LINK_CLICKS
}

enum OptimizationGoal {
  CONVERSIONS
  LINK_CLICKS
  IMPRESSIONS
  REACH
  LANDING_PAGE_VIEWS
  VALUE
}

enum BidStrategy {
  LOWEST_COST_WITHOUT_CAP
  COST_CAP
  LOWEST_COST_WITH_BID_CAP
  LOWEST_COST_WITH_MIN_ROAS
}

enum CTAType {
  LEARN_MORE
  SHOP_NOW
  SIGN_UP
  CONTACT_US
  GET_OFFER
  BOOK_NOW
  APPLY_NOW
}

enum AssetType {
  IMAGE
  VIDEO
}

model AdSet {
  id               String           @id @default(cuid())
  campaignId       String
  campaign         Campaign         @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  name             String
  status           AdSetStatus      @default(DRAFT)
  dailyBudget      Decimal?         @db.Decimal(15, 2)
  lifetimeBudget   Decimal?         @db.Decimal(15, 2)
  currency         String           @default("KRW")
  billingEvent     BillingEvent     @default(IMPRESSIONS)
  optimizationGoal OptimizationGoal @default(CONVERSIONS)
  bidStrategy      BidStrategy      @default(LOWEST_COST_WITHOUT_CAP)
  targeting        Json?
  placements       Json?
  schedule         Json?
  startDate        DateTime
  endDate          DateTime?
  metaAdSetId      String?
  ads              Ad[]
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  @@index([campaignId])
  @@index([status])
}

model Ad {
  id         String   @id @default(cuid())
  adSetId    String
  adSet      AdSet    @relation(fields: [adSetId], references: [id], onDelete: Cascade)
  name       String
  status     AdStatus @default(DRAFT)
  creativeId String
  creative   Creative @relation(fields: [creativeId], references: [id])
  metaAdId   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([adSetId])
  @@index([creativeId])
}

model Creative {
  id             String         @id @default(cuid())
  userId         String
  user           User           @relation(fields: [userId], references: [id])
  name           String
  format         CreativeFormat @default(SINGLE_IMAGE)
  primaryText    String?
  headline       String?
  description    String?
  callToAction   CTAType        @default(LEARN_MORE)
  linkUrl        String?
  assets         Json?
  metaCreativeId String?
  ads            Ad[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([userId])
}

model CreativeAsset {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  type      AssetType
  fileName  String
  fileSize  Int
  mimeType  String
  width     Int?
  height    Int?
  duration  Int?
  blobUrl   String
  metaHash  String?
  createdAt DateTime  @default(now())

  @@index([userId])
}

// ========================================
// Competitor Tracking
// ========================================

model CompetitorTracking {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  pageId    String
  pageName  String
  industry  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, pageId])
  @@index([userId])
}
