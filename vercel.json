{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "regions": ["icn1"],
  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "on"
        }
      ]
    }
  ],
  "rewrites": [],
  "redirects": [],
  "crons": [
    {
      "path": "/api/cron/generate-reports",
      "schedule": "0 0 * * 1"
    },
    {
      "path": "/api/cron/meta-warmup",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/check-anomalies",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/sync",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/refresh-tokens",
      "schedule": "0 2 * * *"
    }
  ]
}
